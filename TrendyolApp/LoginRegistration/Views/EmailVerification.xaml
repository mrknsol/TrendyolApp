        <Button Grid.Row="1"
                Grid.Column="1"
                Width="50"
                Height="30"
                Content="✔"
                HorizontalAlignment="Right"
                VerticalAlignment="Center" 
                Command="{Binding SendVerificationCode_Button}"/>
        <Button Name="BackBtn"
                Command="{Binding Back_Button}"
                Width="50"
                HorizontalAlignment="Left"
                Content="←"/>
        <Button x:Name="NextBtn"
