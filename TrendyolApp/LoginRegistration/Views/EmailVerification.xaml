               FontSize="25"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               />
        <TextBox x:Name="emailTextBox"
                 Grid.Row="1"
                 Text="{Binding CurrentText}"
                 Grid.Column="1"
                 Height="50"
                 Width="300"
