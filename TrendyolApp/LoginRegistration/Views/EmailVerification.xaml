               Content="Email:"
               FontSize="25"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"/>

        <Label Grid.Row="3"
               Content="Enter Code:"
               FontSize="25"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"/>
        <TextBox x:Name="enteredCodeTxtBox"
                 Text="{Binding EnteredCode}"
                 Grid.Row="3"
                 Grid.Column="1"
                 Height="50"
                 Width="300"
